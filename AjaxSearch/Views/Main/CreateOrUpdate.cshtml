@model Book
@{
    ViewData["Title"] = "Processing";
}

<div class="update-form">
    <form asp-action="CreateOrUpdate" asp-controller="Main" method="post">
        <input asp-for="Id" type="hidden" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <div><span asp-validation-for="Name" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="Author"></label>
            <input asp-for="Author" type="text" class="form-control" />
            <div><span asp-validation-for="Author" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="text" step="any" class="form-control" />
            <div><span asp-validation-for="Price" class="text-danger"></span></div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-check"></i> Сохранить
            </button>
            <a asp-action="Search" class="btn btn-secondary">
                <i class="fa fa-times"></i> Отменить
            </a>
        </div>
    </form>
</div>
